<div class="ancillary-sidebar">
  <div class="side-wrapper">
    {% if section.settings.title != blank %}
      <div class="title-wrap sidebar-title-wrap">
        <h3 class="main-title">{{ section.settings.title }}</h3>
      </div>
    {% endif %}
      <div class="ancillary-list-wrap">
        <ul class="ancillary-list">
          {% for block in section.blocks %}
            {% if block.type == 'ancillary_link' %}
              {% if block.settings.link_text != blank %}
                <li class="ancillary-item">
                  <a href="{{ block.settings.link_url }}" class="ancillary-link">{{ block.settings.link_text }}</a>
                </li>
              {% endif %}
            {% endif %}
          {% endfor %}
    
        </ul>
      </div>
    <div class="content-wrap">
      {% if section.settings.info_title != blank %}
        <div class="title-wrap info-title-wrap">
          <h3 class="title info-title">{{ section.settings.info_title }}</h3>
        </div>
      {% endif %}
      <div class="details-wrap">
        {% for block in section.blocks %}
          {% if block.type == 'info' %}
            <div class="info-wrap">
              {% if block.settings.label != blank %}
                <span class="label">{{ block.settings.label }}</span>
              {% endif %}
              {% if block.settings.link_text != blank %}
                <a href="{{ block.settings.link_url }}" class="link">{{ block.settings.link_text }}</a>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>