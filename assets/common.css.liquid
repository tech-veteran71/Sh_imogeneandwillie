/* Font family */
@font-face {
  font-family: 'DIN-Medium';
  src: url("{{ 'DIN-Medium.woff2' | asset_url }}") format('woff2'),
      url("{{ 'DIN-Medium.woff' | asset_url }}") format('woff');
  font-weight: 500;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'DIN';
  src: url('{{ 'din_bold-webfont.woff2' | asset_url }}') format('woff2'),
       url('{{ 'din_bold-webfont.woff' | asset_url }}') format('woff');
  font-weight: bold;
  font-style: normal;
}

@font-face {
  font-family: 'News Gothic MT Std';
  src: url("{{ 'NewsGothicMTStd.woff2' | asset_url }}") format('woff2'),
      url("{{ 'NewsGothicMTStd.woff' | asset_url }}") format('woff');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

.main-container {
  max-width: 1080px;
  padding: 0 20px;
  margin: 0 auto;
}
.index-container {
  max-width: 1840px;
  padding: 0 20px;
  margin: 0 auto;
}
.nashville-container {
  max-width: 1600px;
  padding: 0 20px;
  margin: 0 auto;
}
.custom-content-container {
  max-width: 1650px;
  padding: 0 20px;
  margin: 0 auto;
}
.collection-container {
  padding: 0 0.8rem;
}
@media screen and (min-width: 990px) {
  .collection-container {
    padding: 0 8rem;
  }
}

:root {
  /* font variables */
  --font-din: "DIN";
  --font-din-med: "DIN-Medium";
  --font-gothic: "News Gothic MT Std";
  --font-arno-display: "arno-pro-display";
  /* color variables */
  --color-normal-black: #222222;
  --color-dim-black: #434343;
  --color-light-wheat: #F0EFEC;
  --color-Xlight-wheat: #F7F6F3;
  --color-dark-grey: #CBCBCB;
  --color-white: #ffffff;
  --color-black: #000000;
  --color-blue: #0F359B;
  --color-medium-wheat: #F5F5F5;
  --color-dim-gold: #B4A06A;
  --color-gold: #c2b691;
}
@media screen and (min-width: 1279px) and (max-width: 1600px) {
  .custom-content-container {
    padding: 0 5em;
  }
}
@media screen and (max-width: 1279px) {
  .collection-container {
    padding: 0 30px;
  }
}
@media screen and (max-width: 767px) {
  .collection-container,
  .custom-content-container {
    padding: 0;
  }
  .nashville-container {
    padding: 0 15px;
  }
}
