<style>
  #shopify-section-{{ section.id }} .collage-section {
    --desk-bg-color: {{ section.settings.desk_bg_color }};
    background-color: var(--desk-bg-color);
  }
  @media screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} .collage-section {
      --mob-bg-color: {{ section.settings.mob_bg_color }};
      background-color: var(--mob-bg-color);
    }
  }
</style>

<div class="collage-section" id="collage-section">
  <div class="container">
    <div class="wrapper {% if section.settings.change_alignment %}alignment{% endif %}">
      <div class="alpha">
        <div class="content-wrap">
          {% if section.settings.pre_title != blank %}
            <h4 class="pre-title">{{ section.settings.pre_title }}</h4>
          {% endif %}
          {% if section.settings.main_title != blank %}
            <h2 class="main-title">{{ section.settings.main_title }}</h2>
          {% endif %}
          {% if section.settings.text != blank %}
            <p class="text">{{ section.settings.text }}</p>
          {% endif %}
          {% if section.settings.btn_text != blank %}
            <a href="{{ section.settings.btn_url }}" class="btn {% if section.settings.show_btn %}show-btn{% endif %}">{{ section.settings.btn_text }}</a>
          {% endif %}
        </div>
      </div>
      <div class="beta">
        <a href="{{ section.settings.img_url }}" class="img-wrap">
          {% if section.settings.desk_img != blank %}
            {% render 'responsive--image' with section.settings.desk_img as image, max_width: 1920, class: "image", mob_img: section.settings.mob_img %}
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
          {% if section.settings.mob_img != blank %}
            {% render 'responsive--image' with section.settings.mob_img as image, max_width: 360, class: 'image mob-image' %}
          {% endif %}
        </a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collage Section",
  "settings": [
    {
      "type": "header",
      "content": "Color",
      "info": "-------"
    },
    {
      "type": "color",
      "id": "desk_bg_color",
      "label": "Background Color (Desktop)"
    },
    {
      "type": "color",
      "id": "mob_bg_color",
      "label": "Background Color (Mobile)"
    },
    {
      "type": "header",
      "content": "Image",
      "info": "-------"
    },
    {
      "type": "image_picker",
      "id": "desk_img",
      "label": "Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "mob_img",
      "label": "Image (Mobile)"
    },
    {
      "type": "url",
      "id": "img_url",
      "label": "Image Url"
    },
    {
      "type": "header",
      "content": "Content",
      "info": "-------"
    },
    {
      "type": "text",
      "id": "pre_title",
      "label": "Pre Title"
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button Url"
    },
    {
      "type": "header",
      "content": "Alignment",
      "info": "-------"
    },
    {
      "type": "checkbox",
      "id": "change_alignment",
      "label": "Change Alignment",
      "default": false,
      "info": "Just For Desktop"
    },
    {
      "type": "checkbox",
      "id": "show_btn",
      "label": "Show Button On Mobile",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "50% IMAGE W/ TXT ONLY"
    }
  ]
}
{% endschema %}
