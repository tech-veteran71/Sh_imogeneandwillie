{{ 'image-gallery.css' | asset_url | stylesheet_tag }}
<div class="image-gallery">
  <div class="gallery-container">
    <div class="wrapper">
      <div class="gallery">
        {% for block in section.blocks %}
          {% if block.settings.image != blank %}
            <div class="gallery-item">
              {% render 'responsive--image' with block.settings.image as image, max_width: 247, class: 'image' %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <div class="image-slider">
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            {% for block in section.blocks %}
              {% if forloop.index < 4 %}
                {% if block.settings.image != blank %}
                  <div class="img-wrap image-{{forloop.index}}">
                    {% render 'responsive--image' with block.settings.image as image, max_width: 247, class: 'image' %}
                  </div>
                {% endif %}
                {% else %}
              {% endif %}
            {% endfor %}
          </div>
          <div class="swiper-slide">
            {% for block in section.blocks %}
              {% if forloop.index > 3 and forloop.index < 7 %}
                {% if block.settings.image != blank %}
                  <div class="img-wrap image-{{forloop.index}}">
                    {% render 'responsive--image' with block.settings.image as image, max_width: 247, class: 'image' %}
                  </div>
                {% endif %}
                {% else %}
              {% endif %}
            {% endfor %}
          </div>
          <div class="swiper-slide">
            {% for block in section.blocks %}
              {% if forloop.index > 6 and forloop.index < 9 %}
                {% if block.settings.image != blank %}
                  <div class="img-wrap image-{{forloop.index}}">
                    {% render 'responsive--image' with block.settings.image as image, max_width: 247, class: 'image' %}
                  </div>
                {% endif %}
                {% else %}
              {% endif %}
            {% endfor %}
          </div>
        </div>
        <div class="swiper-pagination"></div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image Gallery",
  "settings": [],
  "blocks": [
    {
      "name": "Image",
      "type": "image",
      "settings": [
       {
         "type": "header",
         "content": "Image",
         "info": "-------"
       },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "IMAGE GALLERY"
    }
  ]
}
{% endschema %}