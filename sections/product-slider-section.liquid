{{ 'product-slider-section.css' | asset_url | stylesheet_tag }}
<div class="product-slider-section">
  <div class="index-container">
    <div class="wrapper">
      <div class="alpha">
        <div class="content">
          {% if section.settings.title != blank %}
            <h2 class="title">{{ section.settings.title }}</h2>
          {% endif %}
          {% if section.settings.text != blank %}
            <p class="text">{{ section.settings.text }}</p>
          {% endif %}
          {% if section.settings.btn_text != blank %}
            <a href="{{ section.settings.btn_url }}" class="button-wrap">
              <span class="btn">{{ section.settings.btn_text }}</span>
              <span class="arrow">
                {% render 'icon-right-arrow' %}
              </span>
            </a>
          {% endif %}
        </div>
      </div>
       <div class="beta">
        <div class="product-slider">
          <div class="swiper-wrapper">
            {% for product in collections[section.settings.choose_collection].products %}
              <a class="product-item swiper-slide" href="{{ product.url }}">
                <div class="image">
                    {% render 'responsive--image' with product.featured_media as image, max_width: 909, class: 'img' %}
                </div>
                <div class="info-wrap">
                  <h2 class="product-title">{{ product.title }}</h2>
                  <span class="product-description">100% cotton</span>
                  <span class="price">{{ product.price | money }}</span>
                </div>
              </a>
            {% endfor %}
          </div>
          <div class="swiper-navigation">
            <div class="swiper-button-prev"></div>
            <div class="swiper-counter"></div>
            <div class="swiper-button-next"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Slider Section",
  "settings":[
    {
      "type": "header",
      "content": "Collection",
      "info": "-------"
    },
    {
      "type": "collection",
      "id": "choose_collection",
      "label": "Choose Collection"
    },
    {
      "type": "header",
      "content": "Content",
      "info": "-------"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "GRAPHIC CONTENT"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "it’s a journey we’ve been on for years.. fine-tuning the details. fueled by our longtime obsession with the look and feel of well worn vintage tees."
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Shop ALL"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button Url"
    }
  ],
  "presets":[
    {
      "name": "Product Slider Section"
    }
  ]
}

{% endschema %}