{{ 'section-mobile-slider.css' | asset_url | stylesheet_tag }}
<section class="slide-section {{ section.settings.margin_bottom }}">
  <div class="container">
    <div class="wrapper {% if section.settings.show_border %}border-bottom{% endif %}">
      {% if section.settings.title != blank %}
        <h2 class="title {{ section.settings.title_font }}">{{ section.settings.title }}</h2>
      {% endif %}
      <div class="contents product-slider">
        <div class="swiper-wrapper">
          {% for product in collections[section.settings.choose_collection].products %}
            {% if section.settings.show_price %}
              {% assign show_price = 'true'%}
              {% endif %}
              {% if section.settings.show_subtitle %}
              {% assign show_subtitle = 'true'%}
              {% endif %}
              {% if section.settings.show_title %}
              {% assign show_title = 'true'%}
              {% endif %}
              {% if section.settings.show_badges %}
              {% assign show_badges = 'true'%}
              {% endif %}
              {% render 'product-card',
                    product: product,
                    show_title: show_title,
                    show_subtitle: show_subtitle,
                    show_price: show_price,
                    swiper_slide: true,
                    show_badges: show_badges
                  %}
          {% endfor %}
        </div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>
      {% if section.settings.btn_text != blank %}
        <div class="btn-wrap">
          <a href="{{ section.settings.btn_url }}" class="btn">{{ section.settings.btn_text }}</a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "MOBILE PRODUCT SLIDER",
  "settings": [
    {
      "type": "select",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "options": [
        {
          "value": "section-bottom__none",
          "label": "0px"
        },
        {
          "value": "section-bottom__small",
          "label": "25px"
        },
        {
          "value": "section-bottom__medium",
          "label": "50px"
        },
        {
          "value": "section-bottom__large",
          "label": "100px"
        }
      ],
      "default": "section-bottom__large"
    },
    {
      "type": "header",
      "content": "This Section Is Just For Mobile Version",
      "info": "------"
    },
    {
      "type": "header",
      "content": "Collection",
      "info": "------"
    },
    {
      "type": "collection",
      "id": "choose_collection",
      "label": "Choose Collection"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show Title",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_subtitle",
      "label": "Show Subtitle",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show Price",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_badges",
      "label": "Show Badges",
      "default": false
    },
    {
      "type": "header",
      "content": "Content",
      "info": "-------"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "select",
      "id": "title_font",
      "label": "Title Font",
      "options": [
        {
          "value": "headline__arno",
          "label": "Arno"
        },
        {
          "value": "headline__din",
          "label": "Din"
        }
      ],
      "default": "headline__din"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button URL"
    },
    {
      "type": "checkbox",
      "id": "show_border",
      "label": "Show Border (Mobile)",
      "default": true
    }
  ],
  "presets":[
    {
      "name": "MOBILE PRODUCT SLIDER"
    }
  ]
}
{% endschema %}