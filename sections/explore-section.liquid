{{ 'explore-section.css ' | asset_url | stylesheet_tag }}

<div class="explore-section">
  <div class="index-container">
    <div class="wrapper">
      {% if section.settings.title != blank %}
        <h2 class="title">{{ section.settings.title }}</h2>
      {% endif %}
      <div class="contents-wrapper">
        {% for block in section.blocks %}
          <div class="content-wrap">
            <div class="img-wrap">
              {% if block.settings.desk_img %}
                {% render 'responsive--image' with block.settings.desk_img as image, max_width: 349, class: 'img', mob_img: block.settings.mob_img %}
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
              {% if block.settings.mob_img != blank %}
                {% render 'responsive--image' with block.settings.mob_img as image, max_width: 360, class: 'img mob-image' %}
              {% endif %}
            </div>
            {% if block.settings.text != blank %}
              <div class="text-wrap">
                <span class="text">{{ block.settings.text }}</span>
              </div>
            {% endif %}
          </div>  
        {% endfor %}
      </div>
      {% if section.settings.btn != blank %}
        <div class="btn-wrap">
          <a href="{{ section.settings.url }}" class="btn">{{ section.settings.btn }}</a>
        </div>
      {% endif %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Explore Section",
  "settings":[
    {
      "type": "header",
      "content": "Content",
      "info": "-------"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "btn",
      "label": "Button"
    },
    {
      "type": "url",
      "id": "url",
      "label": "Button Url"
    }
  ],
  "blocks":[
    {
      "type": "recent_moment",
      "name": "Recent Moment",
      "settings":[
        {
          "type": "header",
          "content": "Image",
          "info": "-------"
        },
        {
          "type": "image_picker",
          "id": "desk_img",
          "label": "Image (Desktop)"
        },
        {
          "type": "image_picker",
          "id": "mob_img",
          "label": "Image (Mobile)"
        },
        {
          "type": "header",
          "content": "Content",
          "info": "-------"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets":[
    {
      "name": "Explore Section"
    }
  ]
}
{% endschema %}