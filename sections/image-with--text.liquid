{{ 'image-with-text.css' | asset_url | stylesheet_tag }}
<div class="image-with-text">
  <div class="collection-container">
    <div class="wrapper">
      <div class="alpha">
        {% if section.settings.img != blank %}
          {% render 'responsive--image' with section.settings.img as image, max_width: 800, class: 'image' %}
        {% endif %}
        <div class="gallery-grid">
          {% for block in section.blocks %}
            {% if block.settings.img != blank %}
              <div class="grid-item">
                {% render 'responsive--image' with block.settings.img as image, max_width: 164, class: 'gallery-image' %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      <div class="beta">
        <div class="content-wrap">
          {% if section.settings.title != blank %}
            <h3 class="title">{{ section.settings.title }}</h3>
          {% endif %}
          {% if section.settings.img != blank %}
            {% render 'responsive--image' with section.settings.img as image, max_width: 800, class: 'image' %}
          {% endif %}
          {% if section.settings.text != blank %}
            <p class="text">{{ section.settings.text }}</p>
          {% endif %}
          {% if section.settings.btn_text != blank %}
            <a href="{{ section.settings.btn_url }}" class="btn">{{ section.settings.btn_text }}</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image With Text",
  "settings": [
    {
      "type": "header",
      "content": "Image",
      "info": "-------"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Content",
      "info": "-------"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "AMERICAN-MADE DENIM"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "in 2018, we partnered with vidalia mills to make the first premium selvage denim  produced in the us since the closure of cone mills, nc."
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "SHOP ALL"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button Url"
    }
  ],
  "blocks": [
    {
      "name": "Image ( Mobile )",
      "type": "image",
      "settings": [
        {
          "type": "header",
          "content": "Image",
          "info": "-------"
        },
        {
          "type": "image_picker",
          "id": "img",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image With Text",
      "category": "Image With Text"
    }
  ]
}
{% endschema %}
