<div class="main-section">
  <div class="new-arrival-section {% if section.settings.change_alignment %}alignment{% endif %}"  style="background-image: url({{ section.settings.bg_img | img_url: 'master' }})">
    <div class="index-container" >
      <div class="wrapper">
         <div class="contents">
        <div class="alpha">
          <div class="content-wrap">
            {% if section.settings.pre_title != blank %}
              <h3 class="pre-title">{{ section.settings.pre_title }}</h3>
            {% endif %}
            {% if section.settings.title != blank %}
              <h2 class="title">{{ section.settings.title }}</h2>
            {% endif %}
            {% if section.settings.text != blank %}
              <div class="text-wrap">{{ section.settings.text }}</div>
            {% endif %}
            {% if section.settings.btn_text != blank %}
              <a href="{{ section.settings.btn_url }}" class="btn">{{ section.settings.btn_text }}</a>
            {% endif %}
          </div>
        </div>
        {% if section.settings.image != blank %}
          <div class="beta">
            {% render 'responsive--image' with section.settings.image as image, max_width: 671, class: 'img' %}
          </div>
        {% endif %}
         </div>
      </div>
    </div>  
  </div>
</div>
{% schema %}
{
  "name": "New Arrival Section",
  "settings": [
    {
      "type": "header",
      "content": "Image",
      "info": "------"
    },
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Alignment",
      "info": "-------"
    },
    {
      "type": "checkbox",
      "id": "change_alignment",
      "label": "Change Alignment",
      "default": false
    },
    {
      "type": "header",
      "content": "Content",
      "info": "-------"
    },
    {
      "type": "text",
      "id": "pre_title",
      "label": "Pre Title"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "html",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text"
    },
    {
      "type": "text",
      "id": "btn_url",
      "label": "Button Url"
    }
  ],
  "presets": [
    {
      "name": "New Arrival Section"
    }
  ]
}

{% endschema %}