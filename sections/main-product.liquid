                {% if product.metafields.seed.product_description_part_1 != blank %}
                {{ product.metafields.seed.product_description_part_1 }}
                {% endif %}
                {% if product.metafields.seed.product_description_part_2 != blank %}
                {{ product.metafields.seed.product_description_part_2 }}
                {% endif %}
                <span class="read-content" data-read-less>read less</span>
              </div>
              {% if product.metafields.seed.product_description_facts != blank %}
              <div class="product__facts rte">
                {{ product.metafields.seed.product_description_facts }}
              </div>
            {% endif %}
