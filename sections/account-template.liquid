{{ 'customer.css' | asset_url | stylesheet_tag }}
{{ 'account-template.css' | asset_url | stylesheet_tag }}

<style>
  .order-history {
    --background-image: url("{{ section.settings.bg_img | img_url: 'master' }}");
    background-image: var(--background-image);
  }
</style>

<div class="inner-order-history">
  <div class="order-wrapper">
    <div class="customer account">
      <div class="order-list">
        <h2 class="main-title">{{ 'customer.orders.title' | t }}</h2>
        {% paginate customer.orders by 20 %}
          {%- if customer.orders.size > 0 -%}
            <div class="table-wrap">
              <table role="table" class="order-history-list">
                <caption class="visually-hidden">{{ 'customer.orders.title' | t }}</caption>
                <thead role="rowgroup">
                  <tr role="row">
                    <th id="ColumnDate" scope="col" role="columnheader">{{ 'customer.orders.date' | t }}</th>
                    <th id="ColumnOrder" scope="col" role="columnheader">{{ 'customer.orders.order_number' | t }}</th>
                    <th id="ColumnFulfillment" scope="col" role="columnheader">{{ 'customer.orders.fulfillment_status' | t }}</th>
                    <th id="ColumnTotal" scope="col" role="columnheader">{{ 'customer.orders.total' | t }}</th>
                  </tr>
                </thead>
                <tbody role="rowgroup">
                  {%- for order in customer.orders -%}
                    <tr role="row">
                      <td headers="RowOrder ColumnDate" role="cell" data-label="{{ 'customer.orders.date' | t }}">
                        <a href="{{ order.customer_url }}">
                          {{ order.created_at | time_tag: format: 'basic' }}
                        </a>
                      </td>
                      <td
                        id="RowOrder"
                        role="cell"
                        headers="ColumnOrder"
                        data-label="{{ 'customer.orders.order_number' | t }}"
                      >
                        <a href="{{ order.customer_url }}" class="order-name" aria-label="{{ 'customer.orders.order_number_link' | t: number: order.name }}">
                          {{ order.name }}
                        </a>
                      </td>
                      <td headers="RowOrder ColumnFulfillment" role="cell" data-label="{{ 'customer.orders.fulfillment_status' | t }}">
                        <a href="{{ order.customer_url }}">
                          {{ order.fulfillment_status_label }}
                        </a>
                      </td>
                      <td headers="RowOrder ColumnTotal" role="cell" data-label="{{ 'customer.orders.total' | t }}">
                        <a href="{{ order.customer_url }}">
                          ${{ order.total_price | money_without_currency }}</td>
                        </a>
                    </tr>
                  {%- endfor -%}
                </tbody>
              </table>
            </div>
          {%- else -%}
            <p class="order-status">{{ 'customer.orders.none' | t }}</p>
          {%- endif -%}
  
          {%- if paginate.pages > 1 -%}
            {%- if paginate.parts.size > 0 -%}
                <nav class="pagination" role="navigation" aria-label="{{ 'general.pagination.label' | t }}">
                  <ul role="list">
                  {%- if paginate.previous -%}
                    <li>
                      <a href="{{ paginate.previous.url }}" aria-label="{{ 'general.pagination.previous' | t }}">
                        {% include 'icon-down-chevron' %}
                      </a>
                    </li>
                  {%- endif -%}
  
                  {%- for part in paginate.parts -%}
                    <li>
                      {%- if part.is_link -%}
                        <a href="{{ part.url }}" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">{{ part.title }}</a>
                      {%- else -%}
                        {%- if part.title == paginate.current_page -%}
                          <span aria-current="page" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">{{ part.title }}</span>
                        {%- else -%}
                          <span>{{ part.title }}</span>
                        {%- endif -%}
                      {%- endif -%}
                    </li>
                  {%- endfor -%}
  
                  {%- if paginate.next -%}
                    <li>
                      <a href="{{ paginate.next.url }}" aria-label="{{ 'general.pagination.next' | t }}" >
                        {% include 'icon-down-chevron' %}
                      </a>
                    </li>
                  {%- endif -%}
                  </ul>
                </nav>
            {%- endif -%}
          {%- endif -%}
        {% endpaginate %}
      </div>
      <div class="link-wrap">
        <a href="{{ routes.account_logout_url }}" class="logout">
          {{ 'customer.log_out' | t }}
        </a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Order History",
  "class": "order-history",
  "settings": [
    {
      "type": "header",
      "content": "Image",
      "info": "------"
    },
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Background Image"
    }
  ]
}
{% endschema %}
