{{ 'section-parallax.css' | asset_url | stylesheet_tag }}

<div class="cut-out-section {% if section.settings.mobile_hide %}mobile-hide{% endif %} {% if section.settings.desktop_hide %}desktop-hide{% endif %}"></div>

<style>
  .cut-out-section {
    background-image: url('{{ section.settings.image | img_url: '2000x' }}')
  }
</style>
{% schema %}
{
  "name": "PARALLAX IMAGE",
  "settings": [
    {
      "type": "checkbox",
      "id": "mobile_hide",
      "label": "Hide on Mobile",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "desktop_hide",
      "label": "Hide on Desktop",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "PARALLAX IMAGE"
    }
  ]
}
{% endschema %}