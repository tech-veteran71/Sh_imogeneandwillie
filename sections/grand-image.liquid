{{ 'grand-image.css' | asset_url | stylesheet_tag }}
<div class="grand-image">
  <div class="container">
    <div class="wrapper">
      <a href="{{ section.settings.img_url }}" class="img-wrap">
        {% if section.settings.desk_img %}
          {% render 'responsive--image' with section.settings.desk_img as image, max_width: 1920, class: 'image', mob_img: section.settings.mob_img %}
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
        {% if section.settings.mob_img != blank %}
          {% render 'responsive--image' with section.settings.mob_img as image, max_width: 360, class: 'image mob-image' %}
        {% endif %}
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Grand Image",
  "settings": [
    {
      "type": "header",
      "content": "Image",
      "info": "-------"
    },
    {
      "type": "image_picker",
      "id": "desk_img",
      "label": "Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "mob_img",
      "label": "Image (Mobile)"
    },
    {
      "type": "url",
      "id": "img_url",
      "label": "Image Url"
    }
  ],
  "presets": [
    {
      "name": "Custom Content - Grand Image"
    }
  ]
}
{% endschema %}