{{ 'community-section.css' | asset_url | stylesheet_tag }}

<div class="community-section">
  <div class="container">
    <div class="wrapper">
      <div class="alpha">
        {% if section.settings.desk_img != blank %}
          <div class="img-wrap desk-img">
            {% render 'responsive--image' with section.settings.desk_img as image, max_width: 1077, class: 'image' %}
          </div>
        {% endif %}
        {% if section.settings.mob_img != blank %}
          <div class="img-wrap mob-img">
            {% render 'responsive--image' with section.settings.mob_img as image, max_width: 1077, class: 'image' %}
          </div>
        {% endif %}
      </div>
      <div class="beta">
        {% if section.settings.pre_title != blank %}
          <h5 class="pre-title">{{ section.settings.pre_title }}</h5>
        {% endif %}
        {% if section.settings.title != blank %}
          <h3 class="title">{{ section.settings.title }}</h3>
        {% endif %}
        {% if section.settings.text != blank %}
          <p class="text">{{ section.settings.text }}</p>
        {% endif %}
        {% if section.settings.link_text != blank %}
          <div class="link-wrap">
            <a href="{{ section.settings.link_url }}" class="link">
              <span class="link-text">{{ section.settings.link_text }}</span>
              {% include 'left-chevron' %}
            </a>
          </div>
        {% endif %}
        {% if section.settings.mob_link_text != blank %}
          <a href="{{ section.settings.mob_link_url }}" class="mob-link">{{ section.settings.mob_link_text }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Community Section",
  "settings": [
    {
      "type": "header",
      "content": "Image",
      "info": "-------"
    },
    {
      "type": "image_picker",
      "id": "desk_img",
      "label": "Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "mob_img",
      "label": "Image (Mobile)"
    },
    {
      "type": "header",
      "content": "Content",
      "info": "-------"
    },
    {
      "type": "text",
      "id": "pre_title",
      "label": "Pre Title",
      "default": "( our home )"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "supper + song"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "a gathering of community around music hosted semi-monthly in the warmer months. supper + song is free and open to the public â€” our backyard is yours. bring a blanket, your loved ones (dogs included), and your own beverages."
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "MORE INFO"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link Url"
    },
    {
      "type": "text",
      "id": "mob_link_text",
      "label": "Mobile Link Text",
      "default": "continue reading"
    },
    {
      "type": "url",
      "id": "mob_link_url",
      "label": "Mobile Link Url"
    }
  ],
  "presets": [
    {
      "name": "Nashville - Community Section"
    }
  ]
}
{% endschema %}