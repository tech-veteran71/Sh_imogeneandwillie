{{ 'section-symmetric-content.css' | asset_url | stylesheet_tag }}

<div class="fabric-section {% if section.settings.mobile_hide %}small--hide{% endif %}">
  <div class="container">
    <div class="wrapper">
      {% if section.settings.main_title != blank %}
        <div class="title-wrap">
          <h2 class="main-title {{ section.settings.title_font }}">{{ section.settings.main_title }}</h2>
        </div>
      {% endif %}
      <div class="fabric-grid">
        {% for block in section.blocks %}
          <div class="fabric-block">
            {% if block.settings.img != blank %}
              <div class="img-wrap">
                {% render 'responsive--image' with block.settings.img as image, max_width: 724, class: 'image' %}
              </div>
              {% else %}
              <div class="img-wrap">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}
            <div class="content-wrap">
              {% if block.settings.title != blank %}
                <h3 class="title">{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.text != blank %}
                <p class="text">{{ block.settings.text }}</p>
              {% endif %}
              {% if block.settings.link_text != blank %}
                <a href="{{ block.settings.link_url }}" class="{% if block.settings.use_btn %}button{% else %}link{% endif %}">{{ block.settings.link_text }}</a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "SYMMETRIC CONTENT DIPTYCH",
  "settings": [
    {
      "type": "checkbox",
      "id": "mobile_hide",
      "label": "Hide on Mobile",
      "default": false
    },
    {
      "type": "header",
      "content": "Content",
      "info": "-------"
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "Main Title",
      "default": "LOREM IPSUM FABRIC"
    }
  ],
  "blocks": [
    {
      "name": "Fabric Info",
      "type": "fabric_info",
      "settings": [
        {
          "type": "header",
          "content": "Image",
          "info": "-------"
        },
        {
          "type": "image_picker",
          "id": "img",
          "label": "Image"
        },
        {
          "type": "header",
          "content": "Content",
          "info": "-------"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "select",
          "id": "title_font",
          "label": "Title Font",
          "options": [
            {
              "value": "headline__arno",
              "label": "Arno"
            },
            {
              "value": "headline__din",
              "label": "Din"
            }
          ],
          "default": "headline__din"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link Url"
        },
        {
          "type": "checkbox",
          "id": "use_btn",
          "label": "Use Button",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SYMMETRIC CONTENT DIPTYCH"
    }
  ]
}
{% endschema %}
