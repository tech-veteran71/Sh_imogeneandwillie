{{ 'size-guide-popup.css ' | asset_url | stylesheet_tag }}

<div class="popup-inner" id="size-guide-popup">
  <div class="wrapper">
    <div class="scroll-header">
      <div class="links">
        {% if section.settings.label != blank %}
          <span class="label">{{ section.settings.label }}</span>
        {% endif %}
        {% for block in section.blocks %}
          {% if block.type == 'link' %}
            {% if block.settings.link_text != blank %}
              <div class="link-wrap">
                <a href="{{ block.settings.link }}" class="link">{{ block.settings.link_text }}</a>
              </div>
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>
      <div class='popup-close' js-popup-close>
        {% render 'close-icon' %}
      </div>
    </div>
    <div class="popup-header inner-wrap" js-popup-header>
      <div class="popup-grid">
        {% if product.metafields.my_fields.size_guide_popup_image != blank %}
          <div class="img-wrap" js-img-wrap>
            {% render 'responsive--image' with product.metafields.my_fields.size_guide_popup_image as image, max_width: 349, class: 'img' %}
          </div>
        {% else %}
          <div class="img-wrap" js-img-wrap>
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
        <div class="content-wrap">
          <div class="contents">
            {% if section.settings.title_1 != blank %}
              <h2 class="title">{{ section.settings.title_1 }}</h2>
            {% endif %}
            {% if section.settings.text_1 != blank %}
              <p class="text">
                {{ section.settings.text_1 }}
                <span>{{ section.settings.label}}</span>
              </p>
            {% endif %}
          </div>
          <div class="links">
            {% for block in section.blocks %}
              {% if block.type == 'link' %}
                {% if block.settings.link_text != blank %}
                  <div class="link-wrap">
                    <a href="{{ block.settings.link }}" class="link">{{ block.settings.link_text }}</a>
                  </div>
                {% endif %}
              {% endif %}
            {% endfor %}
          </div>
          {% if section.settings.btn_text != blank %}
            <a href="{{ section.settings.btn_url }}" class="btn">{{ section.settings.btn_text }}</a>
          {% endif %}
        </div>
        <div class='popup-close' js-popup-close>
          {% render 'close-icon' %}
        </div>
      </div>
    </div>
    <div class="popup-body inner-wrap">
      <div class="table-wrap">
        {{ product.metafields.my_fields.size_guide_popup_ }}
      </div>
    </div>
  </div>
</div>

