{{ 'section-recent-moments.css' | asset_url | stylesheet_tag }}

<section class="explore-section {% if section.settings.mobile_hide %}mobile-hide{% endif %} {% if section.settings.desktop_hide %}desktop-hide{% endif %} {{ section.settings.margin_bottom }}">
  <div class="index-container">
    <div class="wrapper">
      {% if section.settings.title != blank %}
        <h2>{{ section.settings.title }}</h2>
      {% endif %}
      <div class="cart-swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="cart-item swiper-slide">
              <a href="{{ block.settings.url }}" class="cart-link">
                <div class="img-wrap">
                  {% render 'responsive--image' with block.settings.image as image, max_width: 349, class: 'img' %}
                </div>
                <div class="title-wrap">
                  <h4 class="text">{{ block.settings.title }}</h4>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
        <div class="swiper-scrollbar"></div>
      </div>
      {% if section.settings.btn != blank %}
        <div class="btn-wrap">
          <a href="{{ section.settings.url }}" class="btn">{{ section.settings.btn }}</a>
        </div>
      {% endif %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "RECENT MOMENTS",
  "settings":[
    {
      "type": "select",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "options": [
        {
          "value": "section-bottom__none",
          "label": "0px"
        },
        {
          "value": "section-bottom__small",
          "label": "25px"
        },
        {
          "value": "section-bottom__medium",
          "label": "50px"
        },
        {
          "value": "section-bottom__large",
          "label": "100px"
        }
      ],
      "default": "section-bottom__large"
    },
    {
      "type": "checkbox",
      "id": "mobile_hide",
      "label": "Hide on Mobile",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "desktop_hide",
      "label": "Hide on Desktop",
      "default": false
    },
    {
      "type": "header",
      "content": "Content",
      "info": "-------"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "btn",
      "label": "Button"
    },
    {
      "type": "url",
      "id": "url",
      "label": "Button Url"
    }
  ],
  "blocks":[
    {
      "type": "image",
      "name": "Image",
      "settings":[
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets":[
    {
      "name": "RECENT MOMENTS"
    }
  ]
}
{% endschema %}